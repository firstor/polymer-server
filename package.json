{
  "name": "polymer-server",
  "license": "BSD-3-Clause",
  "scripts": {
    "start": "polymer serve --port 3333",
    "build:prod": "polymer build",
    "start:es5": "polymer serve build/es5/ --port 3333",
    "start:bundled": "polymer serve build/bundled/ --port 3333",
    "start:unbundled": "polymer serve build/unbundled/ --port 3333",
    "lint": "npm run lint:javascript && polymer lint",
    "lint:javascript": "eslint . --ext js,html --ignore-path .gitignore",
    "test": "polymer test",
    "test:integration": "polymer build # test that psk builds without error with the CLI"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.0",
    "eslint-plugin-html": "^2.0.0",
    "polymer-cli": "1.3.1"
  }
}
